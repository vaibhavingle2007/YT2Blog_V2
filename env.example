# YouTube Data API Key (optional, falls back to PyTube if not provided)
# Get your API key from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API Key (optional, for enhanced blog generation in future updates)
OPENAI_API_KEY=your_openai_api_key_here

# Nebius AI Studio API Key (required for LLM-powered blog generation)
NEBIUS_API_KEY=your_nebius_api_key_here

# Firebase (Required for Login + Credits)
# Frontend (Firebase Web SDK config)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Backend (Firebase Admin SDK)
# Option A (recommended): put the full service-account JSON in one env var (escaped as a single line JSON)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
# Option B: path to a service-account json file on the server
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/serviceAccountKey.json

# Billing (optional - Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
PUBLIC_APP_URL=http://localhost:8000
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...

# Application Settings
DEBUG=True
HOST=localhost
PORT=8000 